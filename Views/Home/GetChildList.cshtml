@model DataTrans.Models.ChildViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Child Details</h2>
<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link rel="stylesheet" href="styles/kendo.common.min.css" />
    <link rel="stylesheet" href="styles/kendo.default.min.css" />
    <link rel="stylesheet" href="styles/kendo.default.mobile.min.css" />

    <script src="js/jquery.min.js"></script>
    <script src="js/kendo.all.min.js"></script>
</head>
<body>

    <div id="example">
        <div id="vertical">
            <div id="top-pane">
                <div id="horizontal" style="height: 100%; width: 100%;">
                    <div id="left-pane">
                        <div class="pane-content">
                            <h3>Child Information</h3>
                            <p>
                                <tr>
                                    <td><b>Child Name:</b></td>
                                    <td>@Model.ChildName</td>
                                </tr>
                            </p>
                            <p>
                                <tr>
                                    <td><b>KnownName:</b></td>
                                    <td>@Model.KnownName</td>
                                </tr>
                            </p>
                            <p>
                                <tr>
                                    <td><b>DateOfBirth:</b></td>
                                    <td>@Model.DateOfBirth</td>
                                </tr>
                            </p>

                            <p>
                                <tr>
                                    <td><b>Ethnicity:</b></td>
                                    <td>@Model.Ethnicity</td>
                                </tr>
                            </p>
                            <p>
                                <tr>
                                    <td><b>Primary Language:</b></td>
                                    <td>@Model.LanguageSpoken</td>
                                </tr>
                            </p>
                            <p>
                                <tr>
                                    <td><b>Primary Emergency Contact:</b></td>
                                    <td>@Model.EmergencyContact1Id</td>
                                </tr>
                            </p>
                            <p>
                                <tr>
                                    <td><b>Secondary Emergency Contact:</b></td>
                                    <td>@Model.EmergencyContact2Id</td>
                                </tr>
                            </p>
                            <p>
                                <tr>
                                    <td><b>Child's Doctor Name:</b></td>
                                    <td>@Model.ChildDoctorName</td>
                                </tr>
                            </p>
                            <p>
                                <tr>
                                    <td><b>Doctor Contact Num:</b></td>
                                    <td>@Model.ChildDoctorContact</td>
                                </tr>
                            </p>

                        </div>
                    </div>
                    <div id="center-pane">
                        <div class="pane-content">
                            <h3>Parent Information</h3>
                            <p>
                                <tr>
                                    <td><b>Parent Name:</b></td>
                                    <td>@Model.FirstName @Model.LastName</td>
                                </tr>
                            </p>
                            <p>
                                <tr>
                                    <td><b>Landline:</b></td>
                                    <td>@Model.Landline</td>
                                </tr>
                            </p>
                            <p>
                                <tr>
                                    <td><b>Mobile:</b></td>
                                    <td>@Model.Mobile</td>
                                </tr>
                            </p>
                            <p>
                                <tr>
                                    <td><b>Street No:</b></td>
                                    <td>@Model.StreetNum</td>
                                </tr>
                            </p>
                            <p>
                                <tr>
                                    <td><b>Address:</b></td>
                                    <td>@Model.Address</td>
                                </tr>
                            </p>
                            <p>
                                <tr>
                                    <td><b>Suburb: </b></td>
                                    <td>@Model.Suburb </td>
                                </tr>
                            </p>
                            <p>
                                <tr>
                                    <td><b>City:</b></td>
                                    <td>@Model.City</td>
                                </tr>
                            </p>
                            <p>
                                <tr>
                                    <td><b>Postcode:</b></td>
                                    <td>@Model.Postcode</td>
                                </tr>
                            </p>
                            <p>
                                <tr>
                                    <td><b>Country:</b></td>
                                    <td>@Model.Country</td>
                                </tr>
                            </p>
                        </div>
                    </div>
                    <div id="right-pane">
                        <div class="pane-content">
                            <h3>Medical Condition</h3>
                            <p>
                                <tr>
                                    <td><b>Medication Description:</b></td>
                                    <td>@Model.MedicationDesc</td>
                                </tr>
                            </p>
                            <p>
                                <tr>
                                    <td><b>Treatment Description:</b></td>
                                    <td>@Model.TreatmentDesc</td>
                                </tr>
                            </p>
                            <p>
                                <tr>
                                    <td><b>Symptoms:</b></td>
                                    <td>@Model.Symptoms</td>
                                </tr>
                            </p>
                            <p>
                                <tr>
                                    <td><b>Severity:</b></td>
                                    <td>@Model.Severity</td>
                                </tr>
                            </p>
                            <p>
                                <tr>
                                    <td><b>Doctor Name:</b></td>
                                    <td>@Model.DoctorName</td>
                                </tr>
                            </p>
                            <p>
                                <tr>
                                    <td><b>Doctor Contact:</b></td>
                                    <td>@Model.DoctorContact</td>
                                </tr>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div id="bottom-pane">
            <div class="pane-content">
                <h3>Authorised and Non-Authorised Pickups</h3>
                <tr>
                    <td><b>CanPickup:</b></td>
                    <td>@Model.CanPickup</td>
                </tr>
                <p>
                    <tr>
                        <td><b>ActionOnAppear:</b></td>
                        <td>@Model.ActionOnAppear</td>
                    </tr>
                </p>

            </div>
        </div>
    </div>

    <script>
                $(document).ready(function() {
                    $("#vertical").kendoSplitter({
                        orientation: "vertical",
                        panes: [
                            { collapsible: false },
                            { collapsible: false, size: "100px" },
                            { collapsible: false, resizable: false, size: "100px" }
                        ]
                    });

                    $("#horizontal").kendoSplitter({
                        panes: [
                            { collapsible: true },
                            { collapsible: false },
                            { collapsible: true}
                        ]
                    });
                });
    </script>

    <style>
        #vertical {
            height: 380px;
            margin: 0 auto;
        }

        #middle-pane {
            background-color: rgba(60, 70, 80, 0.10);
        }

        #bottom-pane {
            background-color: rgba(60, 70, 80, 0.15);
        }

        #left-pane, #center-pane, #right-pane {
            background-color: rgba(60, 70, 80, 0.05);
        }

        .pane-content {
            padding: 0 10px;
        }
    </style>
    </div>


</body>
</html>